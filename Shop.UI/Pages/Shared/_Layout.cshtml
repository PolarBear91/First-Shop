<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop.UI</title>

    <environment include="Development">
        <link href="~/lib/bulma-0.8.0/css/bulma.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Production">
        <link href="~/lib/bulma-0.8.0/css/bulma.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>

    <nav class="navbar is-black" role="navigation" aria-label="main navigation" >
        <div class="navbar-brand">
            <a class="navbar-item">
                <img src="~/images/Logo.jpg" height="320" width="150"/>
            </a>

            <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item" asp-page="/Index">
                     Home
                </a>

                <a class="navbar-item" asp-page="/Contact" >
                    Contact
                </a>
               
                <a class="navbar-item" asp-page="/About_us">
                    About us
                </a>
                
            </div>

            <div class="navbar-end">
                <vc:Cart view="Small"></vc:Cart>

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="navbar-item"><a class="button is-primary" asp-controller="Account" asp-action="Logout">Sign Out</a></div>

                }
                else
                {
                    <div class="navbar-item"><a class="button is-primary" asp-page="/Accounts/Login">Sign In</a></div>
                }
            
            </div>
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />
    <div class="container body-content">
        @RenderBody()

    </div>

    <footer class="footer">
        <div class="content has-text-centered">
            <p>
             "Я очень старался,возьмите меня на работу..." GuitarShop 2019  
            </p>
        </div>
    </footer>

    <environment include="Development">
        @*<script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>*@
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
