@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}



<div class="section">
    <div class=" columns is-multiline is-mobile">
        @{
            foreach (var p in Model.Products)
            {
                <div class="column is-3-desktop is-4-tablet is-6-mobile">
                    <a asp-page="Product" asp-route-name="@p.Name.Replace(" ", "-")">
                    <div class="card" >
                        <div class="card-image" align="center">
                            <figure>

                                @{
                                    string img = p.Name + ".jpg";
                                }
                                <img src="~/images/@img" />

                            </figure>
                        </div>
                        <div class="card-content">
                            @{
                                string cssClass = "";
                                string message = "";

                                if (p.StockCount == 0)
                                {
                                    cssClass = "is-warning";
                                    message = "Out Of Stock";

                                }
                                else if (p.StockCount <= 5)
                                {
                                    cssClass = "is-danger";
                                    message = "Low Of Stock";
                                }
                            }
                            @if (p.StockCount <= 5)
                            {
                                <div class="notification is-paddingless has-text-centered @cssClass">
                                    @message
                                </div>
                            }
                            <p class="title is-size-6">
                                @p.Name @p.Description
                            </p>
                            <p class="subtitle">
                                @p.Value$
                            </p>
                        </div>
                    </div>
                    </a>
                </div>
               }
            }          
    </div>
    </div>

